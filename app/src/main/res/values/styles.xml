<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/main_yellow</item>
    </style>

    <style name="ListaAcougues" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app_bar_background</item>
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="colorAccent">@color/main_yellow</item>
    </style>

    <style name="SplashTheme" parent="android:Theme.Material.NoActionBar.Fullscreen">
        <item name="colorPrimary">@color/main_yellow</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--Style for the Home Toolbar-->
    <style name="HomeToolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/app_bar_background</item>
        <item name="android:elevation">@dimen/toolbar_bar_elevation</item>
        <item name="android:popupTheme">@style/Theme.AppCompat.Light</item>
    </style>

    <style name="TextAppearance.ActionBar" parent="@android:style/TextAppearance">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/main_yellow</item>
    </style>

    <style name="CategoryTab" parent="Widget.Design.TabLayout">
        <item name="android:background">@android:color/white</item>
        <item name="tabIndicatorColor">@color/tab_bar_background</item>
        <item name="tabSelectedTextColor">@color/main_yellow</item>
        <item name="tabTextAppearance">@style/CategoryTabTextAppearance</item>
        <item name="tabBackground">@color/main_yellow</item>
        <item name="tabIndicatorHeight">48dp</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <!-- AparÃªncia do estilo do texto para uma categoria de aba -->
    <style name="CategoryTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#A8A19E</item>
        <item name="android:textSize">10sp</item>
    </style>
</resources>
