<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:minHeight="120dp"
    android:background="@color/fundo_lista">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:src="@drawable/logolista"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/logo"
        android:paddingStart="16dp"
        android:paddingEnd="0dp">

        <TextView
            android:id="@+id/butchery_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="0dp"
            android:layout_weight="1"
            tools:text="Nome do aÃ§ougue"
            android:gravity="bottom"
            android:textColor="@color/amarelo_nome_acougue"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/distance_image"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/icone_local"/>

            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:text="0.0"
                android:gravity="top"
                android:textColor="@android:color/white"
                android:paddingLeft="8dp"/>

            <TextView
                android:id="@+id/km"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Km"
                android:gravity="top"
                android:textColor="@android:color/white"
                android:paddingStart="4dp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>