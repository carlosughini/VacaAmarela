<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/butchery_detail_background"
    android:id="@+id/content_butchery">

    <android.support.v7.widget.Toolbar
        style="@style/HomeToolbar"
        android:fitsSystemWindows="true"
        android:id="@+id/home_toolbar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@color/main_yellow" />

    <ImageView
        android:id="@+id/butchery_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/barbecue2"
        android:scaleType="centerCrop"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/butchery_tabLayout"
        style="@style/CategoryTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/butchery_viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>